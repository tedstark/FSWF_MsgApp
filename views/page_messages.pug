extends page_layout

block content
    h1= title
    p Welcome to #{title}
    br
    form(role='form' method='POST' action='/twilio/messages')
        label(for='txtCustomMsg') Personalized Message:
        input(name='txtCustomMsg' type='text' placeholder='Enter Message Body...' size='35')
        br
        br
        label(for='txtFromGrp') From Group:
        select(name='txtFromGrp', size='0')
            option(disabled='', selected='', value='')  -- select an option -- 
            option(value='Fresh Start') Fresh Start Women's Foundation
            option(value='Social Services') FSWF Social Services
            option(value='Family Law') FSWF Family Law
        br
        br      
        label(for='txtCustomFrom') From:
        input(name='txtCustomFrom' type='text' placeholder='From...' size='35')
        br
        br
        label(for='txtClient') To #:
        .multiFieldWrapper
            .multiFields
                .multiField
                    input.msgToNum(name='txtClient' type='number' placeholder='Client Phone...' data-field=0)
                    button.removeNum.test(type='button' hidden) Remove 
        button.addNum(type='button' ) Add Number
        br
        br
        label(for='txtCallback') Callback #:
        input(name='txtCallback', type='number' placeholder='Callback Phone...')
        br
        br
        input(type="submit", value="Submit Text")
