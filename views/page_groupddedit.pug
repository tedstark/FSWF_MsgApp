extends page_layout2

block content
  if user && user.role=='admin'
        .container
            h1 #{title}
            br
            form(role='form' method='POST' action='/groupdd/edit/'+groupddInForm._id)
                .form-group
                    label(for='groupName') Workgroup Name:
                    input.form-control(class='u-full-width', name='groupName', type='text', placeholder='' value=groupddInForm.name required)
                br
                button.btn.btn-info.btn-sm(type='submit') Submit Changes
                a.button.btn.btn-default.btn-sm(type='button' href='/groupdd') Cancel
            br
