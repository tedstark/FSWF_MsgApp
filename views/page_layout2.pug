doctype html
html
    head
        title FSWF Messaging App (2)
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='shortcut icon', type='image/png', href='/images/favicon.ico')
        link(href='//fonts.googleapis.com/css?family=Raleway:400,300,600', rel='stylesheet', type='text/css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/css/style.css')
        script(type='text/javascript' src='/js/jquery.js')
        script(type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
        script(type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
        script(type='text/javascript' src='/js/main.js')
    body
        .container
            //- A grey horizontal navbar that becomes vertical on small screens
            nav.navbar.navbar-expand-sm.bg-light
                ul.navbar-nav
                    //- li.nav-item
                    //-     a.nav-link(href='/') Home
                    if user
                        li.nav-item
                            a.nav-link(href='/reminders') Reminders
                        li.nav-item
                            a.nav-link(href='/messages') Messages
                        li.nav-item
                            a.nav-link(href='/preview') Preview
                        if user.role=='admin'
                            li.nav-item
                                a.nav-link(href='/users/list') All Users
                            li.nav-item
                                a.nav-link(href='/users/add') Add a User
                        li.nav-item
                            a.nav-link(href='/login/logout') Logout
            br
            != messages('include_msgs', locals)
            if errors
              each error, i in errors
                div.alert.alert-danger.alert-dismissible.close #{error.msg}  
            br
        block content
        .container
            if !user
                br
                h5 Please log in 
                    a(href="/") here
            hr
            footer.myfooter
              p.copyright Copyright Â©2018 Fresh Start Women's Foundation
                  .container
