extends page_layout2

block content
    if user
        .container
            h1 #{title}
            br
            hr
            h4 Please confirm/edit recipient text message:
            br
            form(id="txtForm" role='form' method='POST' action='/twilio/send')
                .form-row.col-sm-3
                    .form-group
                        label(for='previewPhone') Client Phone Number:
                        input.form-control(name='previewPhone' type='number' placeholder='' min='2010000000' max='9999999999' value=txtToPhone required)
                .form-group
                    label(for='previewMessage') Text Message to be Sent:
                    textarea.previewMsg.form-control(class='mlen' name='previewMessage' required)= txtFullMsg
                    .previewMsg_Count
                br
                input.btn.btn-success.btn-sm(class='bluebtn2', type='submit' value='Send Text')
                a.button.btn.btn-info.btn-md(type='button' href='/reminders') Cancel / Edit
        br
