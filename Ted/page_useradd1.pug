extends page_layout2

block content
  if user && user.role=='admin'
        .container
            h1 #{title}
            br
            form(role='form' method='POST' action='/users/add')
                .form-group
                    label(for='username') Username:
                    input.form-control(class='u-full-width', name='username', type='text', placeholder='Username...')
                .form-group
                    label(for='role') Role:
                    select.form-control(name='role', size='0')
                        option(disabled='', selected='', value='')  -- select an option -- 
                        option(value='admin') admin
                        option(value='staff') staff
                .form-group
                    label(for='password') Password:
                    input.form-control(name='password', type='password', placeholder='Enter password...')
                .form-group
                    label(for='password2') Confirm Password:
                    input.form-control(name='password2' type='password' placeholder='Confirm password...')
                br
                input.btn.btn-info.btn-sm(type="submit", value="Submit User")
            br
